{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs24.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*).css",
      "destination": "/public/$1.css"
    },
    {
      "source": "/(.*).js",
      "destination": "/public/$1.js"
    },
    {
      "source": "/(.*).jpg",
      "destination": "/public/$1.jpg"
    },
    {
      "source": "/(.*).jpeg",
      "destination": "/public/$1.jpeg"
    },
    {
      "source": "/(.*).png",
      "destination": "/public/$1.png"
    },
    {
      "source": "/(.*).gif",
      "destination": "/public/$1.gif"
    },
    {
      "source": "/(.*).svg",
      "destination": "/public/$1.svg"
    },
    {
      "source": "/(.*).ico",
      "destination": "/public/$1.ico"
    },
    {
      "source": "/(.*).vcf",
      "destination": "/public/$1.vcf"
    },
    {
      "source": "/charity-form.html",
      "destination": "/public/charity-form.html"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    }
  ]
}
